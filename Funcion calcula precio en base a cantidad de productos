--DEVUELVE EL PRECIO TOTAL DEL PRODUCTO POR LA CANTIDAD

CREATE FUNCTION fn_calculaPrecio(produc IN NUMBER, canti IN NUMBER)
RETURN NUMBER
IS
    PRECIO VENTADETALLE.TOTAL%TYPE;
BEGIN

    SELECT PRECIO
    INTO PRECIO
    FROM PRODUCTO_BITS1
    WHERE ID_PRODUCTO = produc;
    
    PRECIO := PRECIO * CANTI;
    
    RETURN(PRECIO);
    
END fn_calculaPrecio;
    
    
